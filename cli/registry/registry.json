{
  "version": "2.0.0",
  "baseUrl": "https://raw.githubusercontent.com/SibilSoren/setu-js/main/cli/registry/templates",
  "components": {
    "base": {
      "name": "Base",
      "description": "Global error handler and Zod validation middleware",
      "frameworkSpecific": true,
      "files": {
        "express": [
          "express/base/error-handler.ts",
          "express/base/zod-middleware.ts"
        ],
        "hono": [
          "hono/base/error-handler.ts",
          "hono/base/zod-middleware.ts"
        ],
        "fastify": [
          "fastify/base/error-handler.ts",
          "fastify/base/zod-middleware.ts"
        ]
      },
      "dependencies": {
        "common": ["zod"]
      },
      "devDependencies": {
        "express": ["@types/express"]
      }
    },
    "auth": {
      "name": "Authentication",
      "description": "JWT authentication with refresh tokens and cookie support",
      "frameworkSpecific": true,
      "files": {
        "express": [
          "express/auth/auth.controller.ts",
          "express/auth/auth.service.ts",
          "express/auth/auth.middleware.ts",
          "express/auth/auth.routes.ts"
        ]
      },
      "dependencies": {
        "common": ["jsonwebtoken", "bcryptjs", "cookie-parser"]
      },
      "devDependencies": {
        "common": ["@types/jsonwebtoken", "@types/bcryptjs", "@types/cookie-parser"]
      }
    },
    "logger": {
      "name": "Logger",
      "description": "Structured logging with Pino",
      "frameworkSpecific": true,
      "files": {
        "express": [
          "express/logger/logger.ts",
          "express/logger/http-logger.ts"
        ]
      },
      "dependencies": {
        "common": ["pino", "pino-http", "pino-pretty"]
      },
      "devDependencies": {
        "common": []
      }
    },
    "database": {
      "name": "Database",
      "description": "Database connection and ORM setup",
      "frameworkSpecific": false,
      "requiresSelection": true,
      "variants": {
        "postgres-prisma": {
          "label": "PostgreSQL + Prisma",
          "files": [
            "shared/database/prisma/client.ts",
            "shared/database/prisma/db.ts"
          ],
          "dependencies": ["@prisma/client"],
          "devDependencies": ["prisma"]
        },
        "postgres-drizzle": {
          "label": "PostgreSQL + Drizzle",
          "files": [
            "shared/database/drizzle/client.ts",
            "shared/database/drizzle/schema.ts"
          ],
          "dependencies": ["drizzle-orm", "postgres"],
          "devDependencies": ["drizzle-kit"]
        },
        "mongodb-mongoose": {
          "label": "MongoDB + Mongoose",
          "files": [
            "shared/database/mongoose/client.ts",
            "shared/database/mongoose/models.ts"
          ],
          "dependencies": ["mongoose"],
          "devDependencies": []
        }
      }
    },
    "security": {
      "name": "Security",
      "description": "Rate limiting with Helmet security headers",
      "frameworkSpecific": true,
      "files": {
        "express": [
          "express/security/rate-limiter.ts",
          "express/security/helmet.ts"
        ]
      },
      "dependencies": {
        "common": ["helmet", "express-rate-limit"]
      },
      "devDependencies": {
        "common": ["@types/express-rate-limit"]
      }
    }
  }
}
